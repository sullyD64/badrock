local platforms = {}
platforms.list = {
	--1
		{
		type = "elevator",
		bounce = 0,
		friction = 1.0,
		density = 1.0,
		image = "sprites/paper.png",
		height = 40,
		width = 40,
		speed=0
		}
}

function game.createPlatform( platform )
		local p = nil
			for k, v in pairs(platforms.list) do
			if (v.type == type) then
				p = v
				break
			end
		end
		platform = display.newImageRect (p.image , p.width, p.height)
		p.isGround = true
		physics.addBody( enemy, { density = p.density, friction = p.friction, bounce = p.bounce} )
		return platform
end